<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android.support.v7.cardview="http://schemas.android.com/tools"
    app:cardElevation="2sp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="5sp"
    app:cardBackgroundColor="#FFFFFF"
    android.support.v7.cardview:cardBackgroundColor="@color/white">
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal">



    <TextView
        android:background="@color/available"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        />
    <TextView
        android:layout_weight="1"

        android:padding="10dp"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logDate" />
    <TextView
        android:layout_gravity="right"
        android:padding="10dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logDuration" />
</LinearLayout>
</android.support.v7.widget.CardView>